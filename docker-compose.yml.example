version: '3.6'

services:
  db:
    image: postgres:10-alpine
    environment:
      - POSTGRES_DB=pegelinux
      - POSTGRES_USER=postgre
      - POSTGRES_PASSWORD=changeme
    ports:
      - 5432:5432
    volumes:
      - ./db/postgre:/var/lib/postgresql/data
  web:
    restart: always
    build: .
    command: gunicorn --reload -b 0.0.0.0:5000 app:app
    volumes:
      - .:/code
    ports:
      - 5000:5000
    environment:
      - ENV=DEVELOPMENT
      - APP_CONFIG=config.application.DevelopmentConfig
      - SECRET_KEY=changemeinprod
      - DATABASE_URL=postgres://postgre:changeme@db:5432/pegelinux
    depends_on:
      - db
